rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Admin Check
    function isAdmin() {
      return request.auth != null; // Simple authentication check for now
    }

    // --- YOUR EXISTING RULES (Preserve these) ---
    // Example: Products (Read-only for public if you want, or restricted)
    match /products/{productId} {
      allow read: if true; // Or authenticated only
      allow write: if isAdmin();
    }
    
    match /banners/{bannerId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- NEW RULES FOR ADMIN TOOL ---
    
    match /orders/{orderId} {
      allow read: if isAdmin();
      allow create: if isAdmin() && 
                   request.resource.data.customerName is string &&
                   request.resource.data.items is list;
      allow update: if isAdmin();
      allow delete: if false; 
    }

    match /invoices/{invoiceId} {
      allow read: if isAdmin();
      allow create: if isAdmin() && request.resource.data.orderId is string;
      allow update: if false; 
      allow delete: if false;
    }
  }
}
